<div class="row valign-wrapper">
  <div class="col s4">
    <% if signed_in? %>
      <div class="card">
        <div class="card-panel teal white-text">
          <%= "Nur die 2 zuletzt hochgeladenen Bilder werden hier angezeigt. Bilder können #{link_to('hier', images_path(page: 'Home'), class: 'waves-effect waves-teal btn-flat red btn-small white-text')} gelöscht werden.".html_safe %>
          <%= link_to "<i class='material-icons'>add</i>".html_safe, new_image_path(page: 'Home'), class: 'btn-floating halfway-fab waves-effect waves-light red' %>
        </div>
      </div>
    <% end %>
    <% @images.each do |image| %>
      <%= image_tag(image.picture.url, alt: 'kila picture', class: 'responsive-img') %>
    <% end %>
  </div>

  <div class="col s8">
    <% if @main_content %>
      <%= show_content_actions(@main_content) %>
      <%= simple_format(@main_content&.content) %>
    <% else %>
      <%= new_content_link_helper('Home') %>
    <% end %>

    <h2>Neuigkeiten</h2>
    <div class="row">
      <div class="card-panel teal white-text">
        <% if @jobs %>
          <%= show_content_actions(@jobs) %>
          <%= simple_format(@jobs&.content) %>
        <% else %>
          <%= new_content_link_helper('Stellenausschreibung') %>
        <% end %>
      </div>
    </div>

    <h2>Freie Plätze</h2>
    <div class="row">
      <div class="card-panel teal white-text">
        <% if @kila_free_positions %>
          <%= show_content_actions(@kila_free_positions) %>
          <%= simple_format(@kila_free_positions&.content) %>
        <% else %>
          <%= new_content_link_helper('Freie Plätze') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
