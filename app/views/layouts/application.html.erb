<!DOCTYPE html>
<html>
  <head>
    <title>KiLa Hildegarten</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon_master', media: 'all' %>
  </head>

  <body>
    <header>
      <%= render 'shared/navbar' %>
    </header>

    <main>
        <div id="notices_error_messages">
          <% if notice %>
            <p class="notice card-panel teal lighten-2"><%= notice %></p>
          <% elsif alert %>
            <p class="alert card-panel teal lighten-2"><%= alert %></p>
          <% end %>
        </div>
        <%= yield %>
    </main>

    <footer>
      <%= render 'shared/footer' %>
    </footer>
  </body>
</html>
