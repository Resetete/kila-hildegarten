.navbar-fixed#fixed-navbar
  %ul#dropdown1.dropdown-content
    %li= link_to 'Wir über uns', "#{root_path}#about_us_section"
    %li= link_to 'Tagesablauf', "#{root_path}#daily_life_section"
    %li= link_to 'Räume', "#{root_path}#rooms_section"
    %li= link_to 'Konzept', "#{root_path}#concept_section"
    %li= link_to 'Eingewöhnung', "#{root_path}#familarization_section"

  %nav
    .nav-wrapper.container
      = link_to root_path, class: "brand-logo" do
        = image_tag 'logo-kila-cut.png', id: 'brand-logo-image'
      %a.sidenav-trigger{"data-target": "mobile-demo"}
        %i.material-icons menu
      %ul.right.hide-on-med-and-down
        %li
          %a.dropdown-trigger{"data-target" => "dropdown1"}
            Kinderladen
            %i.material-icons.right arrow_drop_down
        %li= link_to 'Team', team_path
        %li= link_to 'Eltern', parents_path
        %li= link_to 'Bilder', photos_path
        %li= link_to 'Kontakt', contact_path
        %li
          %span.horizontal-space
        - if admin_signed_in?
          %li= link_to 'Logout', destroy_admin_session_path, method: :delete
        - else
          %li= link_to 'Login', new_admin_session_path

  %ul.sidenav#mobile-demo{'data-turbolinks': "false"}
    %li= link_to 'Kinderladen', root_path
    %li= link_to 'Team', team_path
    %li= link_to 'Eltern', parents_path
    %li= link_to 'Bilder', photos_path
    %li= link_to 'Kontakt', contact_path
    %li
      %span.horizontal-space
    - if admin_signed_in?
      %li= link_to 'Logout', destroy_admin_session_path, method: :delete
    - else
      %li= link_to 'Login', new_admin_session_path
