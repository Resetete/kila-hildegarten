<div class="row">
  <%= form_for @content, class: 'col s12'  do |f| %>
    <div class="col s12">
      <% if @content.errors.any? %>
        <ul>
          <div>
            <% @content.errors.full_messages.each do |msg| %>
              <li class="card-panel orange"><%= msg %></li>
            <% end %>
          </div>
        </ul>
      <% end %>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :content, 'Inhalt' %>
        <%= f.text_area :content, id: 'form-text-area', class: 'materialize-textarea' %>
      </div>

      <div class="input-field col s12">
        <%= f.hidden_field :page %>
      </div>

      <div class="col s12">
        <%= f.button 'Abschicken', class: "btn waves-effect waves-light" %>
      </div>
    </div>
  <% end %>
</div>
