.container
  %h1 Photos und Dokumente

  .action-items
    %button.waves-effect.waves-light.btn#download-selected-btn Download Selected
    %p.left-padding
      %label.valign-wrapper
        %input{type: "checkbox", class: 'filled-in', id: 'select-all-checkbox', multiple: true}
          %span Select all

  - @subfolders_with_photo_ids.each do |subfolder|
    %h3= subfolder.dig('properties', 'title')
    .row
      %ul.photo-elements
        - subfolder[:photo_objects].each do |photo|
          - photo_id = photo['id']
          - auth_token = Admin.find_by(role: 'webling_user').auth_token
          %li.col.s12.m3
            .card.medium.hoverable
              .card-image
                - photo_content = webling_photo_path(id: photo_id, token: auth_token)
                = image_tag(photo_content, alt: photo.dig('properties', 'file', 'name'), class: 'responsive-img')
              .card-content
                = photo.dig('properties', 'file', 'name')
                %p.card-action
                  %label
                    %input{type: "checkbox", class: "filled-in photo-checkbox", value: photo_content}
                      %span Download

